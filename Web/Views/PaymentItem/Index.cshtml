@model IEnumerable<Infrastructure.Models.PaymentItem>

@{
    ViewBag.Title = "Payment Items";
}

<h2>Payment Items Maintenance</h2>

<a href="@Url.Action("Create", "Create")" class="btn btn-primary">Create <i class="fa-solid fa-plus"></i></a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDItem }, new { @class = "btn btn-primary" })



            </td>
        </tr>
    }

</table>
