@model IEnumerable<Infrastructure.Models.Incidence>

@{
    ViewBag.Title = "Incidence Maintenance";
}

<h2 class="my-2">Incidence Maintenance</h2>
<div class="table-responsive ">
    <table class="table table-striped trCustom shadow-lg animate__animated animate__fadeIn" id="myTable">
        <thead class=" table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    USER
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Finished)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Finished)
                    </td>
                    <td>
                        
                        <a href="@Url.Action("Edit", "Incidence", new { id = item.IDIncidence })" class="btn btn-primary"><i class="fa-solid fa-pen"></i> Edit</a>
                    </td>
                </tr>
            }
        </tbody>

           

</table>
</div>
   
