@model IEnumerable<Infrastructure.Models.Incidence>

@{
    ViewBag.Title = "Incidence Maintenance";
}

<h2 class="my-2">Incidence Maintenance</h2>


@*<a href="@Url.Action("Create", "Incidence")" class="btn btn-primary my-2"><i class="fa-solid fa-plus"></i> Create</a>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            USER
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finished)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Finished)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.IDIncidence })*@
                <a href="@Url.Action("Edit", "Incidence", new { id = item.IDIncidence })" class="btn btn-primary"><i class="fa-solid fa-pen"></i> Edit</a>
            </td>
        </tr>
    }

</table>