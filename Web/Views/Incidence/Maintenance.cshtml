@model IEnumerable<Infrastructure.Models.Incidence>

@{
    ViewBag.Title = "Incidence Maintenance";
}

<h2>Incidence Maintenance</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<a href="@Url.Action("Create", "Incidence")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Finished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.IDIncidence })*@
                <a href="@Url.Action("Edit", "Incidence", new { id = item.IDIncidence })" class="btn btn-primary"><i class="fa-solid fa-pen"></i> Edit</a>
            </td>
        </tr>
    }

</table>